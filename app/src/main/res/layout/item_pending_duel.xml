<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view_non_edit"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="8dp" >

    <!--   Recycler View Item Row   -->
    <RelativeLayout
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:layout_height="fill_parent"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:layout_alignParentBottom="true">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvYouVsSomebody"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#808080"
            android:gravity="center"
            android:textSize="24sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/tv_goal"
            android:layout_below="@+id/tvYouVsSomebody"
            android:layout_marginTop="48dp"
            android:textAllCaps="true"
            android:textColor="@color/colorTextAqua"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/colorTextAqua"
            android:id="@+id/textViewDuring"
            android:paddingTop="5dp"
            android:layout_below="@+id/tvEveryDayPending"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginTop="5dp" />

        <!-- id = AcceptButton, but this is Points View. I Can't rename, because this will change name in -->
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/imageViewPoints"
            android:src="@drawable/points"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/points" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/everyday_for_the_next"
            android:id="@+id/tvEveryDayPending"
            android:paddingTop="5dp"
            android:layout_below="@+id/tv_goal"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp" />

        <ImageButton
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/btn_cancel"
            android:background="@drawable/icon_give_up"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/imageViewPoints"
            android:layout_toStartOf="@+id/imageViewPoints"
            android:layout_marginRight="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="14dp" />

        <ImageButton
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/btn_accept"
            android:background="@drawable/icon_done_for_today"
            android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp"
            android:layout_alignTop="@+id/btn_cancel"
            android:layout_toRightOf="@+id/imageViewPoints"
            android:layout_toEndOf="@+id/imageViewPoints"
            android:layout_marginBottom="14dp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>