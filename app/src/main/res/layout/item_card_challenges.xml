<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:orientation="vertical"
    android:id="@+id/item_parent_layout"
    android:descendantFocusability="beforeDescendants">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:id="@+id/card_layout"
        android:background="#cdced2"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="8dp">


        <TextView
            android:id="@+id/tv_challenge_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="Challenge Name"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="@color/color_white"
            android:textStyle="bold"
            android:layout_toLeftOf="@+id/text_view_streak"
            android:layout_toStartOf="@+id/text_view_streak"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/tv_percent_complete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0% complete"
            android:textColor="@color/color_white"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:gravity="bottom"
            android:layout_above="@+id/card_progress_bar"
            android:layout_toLeftOf="@+id/text_view_streak_n"
            android:layout_toStartOf="@+id/text_view_streak_n"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ProgressBar
            android:id="@+id/card_progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:progress="100"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/text_view_streak_n"
            android:layout_toStartOf="@+id/text_view_streak_n"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


        <TextView
            android:id="@+id/text_view_day"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="Day"
            android:textColor="@color/color_white"
            android:textStyle="bold"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textAlignment="center"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp" />

        <TextView
            android:id="@+id/text_view_streak"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="Streak"
            android:textColor="@color/color_white"
            android:textStyle="bold"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textAlignment="center"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/text_view_day"
            android:layout_toStartOf="@+id/text_view_day" />

        <TextView
            android:id="@+id/text_view_day_n"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="36sp"
            android:textColor="@color/color_white"
            android:textAlignment="center"
            android:layout_below="@+id/text_view_streak"
            android:layout_toRightOf="@+id/text_view_streak"
            android:layout_toEndOf="@+id/text_view_streak"
            android:layout_alignRight="@+id/text_view_day"
            android:layout_alignEnd="@+id/text_view_day"
            android:layout_alignParentBottom="true" />

        <TextView
            android:id="@+id/text_view_streak_n"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="0"
            android:textAlignment="center"
            android:textColor="@color/color_white"
            android:textSize="36sp"
            android:layout_alignLeft="@+id/text_view_streak"
            android:layout_alignStart="@+id/text_view_streak"
            android:layout_below="@+id/text_view_streak"
            android:layout_alignRight="@+id/text_view_streak"
            android:layout_alignEnd="@+id/text_view_streak"
            android:layout_alignParentBottom="true" />


        <!--</RelativeLayout>-->


        <LinearLayout
            android:id="@+id/layout_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <TextView
                android:id="@+id/button_decline"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="40"
                android:text="Decline"
                android:textColor="@color/color_white"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:gravity="center"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/button_cancel"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="30"
                android:text="Cancel"
                android:textColor="@color/color_white"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:gravity="center"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/button_accept"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="40"
                android:text="Accept"
                android:textColor="@color/color_white"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:gravity="center"
                android:visibility="invisible" />

        </LinearLayout>


    </RelativeLayout>


</RelativeLayout>
