<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="false"
    android:id="@+id/row_friends_list_close"
    android:visibility="visible"

    android:layout_above="@+id/row_friends_list_open"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true" >

    <!--    user data  -->
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/picture"
        android:layout_alignParentBottom="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="8dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:id="@+id/userName"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/picture"
        android:layout_marginLeft="64dp"
        android:layout_marginRight="8dp" />

    <!--    logos   -->
    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:id="@+id/imageView_challenges_logo"
        android:layout_above="@+id/view"
        android:src="@drawable/ic_score_prog"
        android:layout_toLeftOf="@+id/counterInProgress"
        android:layout_toStartOf="@+id/counterInProgress"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="2dp" />
    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:id="@+id/imageView_wins_logo"
        android:src="@drawable/ic_score_wins"
        android:layout_above="@+id/view"
        android:layout_toLeftOf="@+id/counterWins"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="2dp"
        android:contentDescription="@string/wins"
        android:layout_alignTop="@+id/imageView_total_logo" />
    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:id="@+id/imageView_total_logo"
        android:src="@drawable/ic_score_total"
        android:layout_above="@+id/view"
        android:layout_marginBottom="2dp"
        android:layout_toLeftOf="@+id/counterTotal"
        android:layout_toStartOf="@+id/counterTotal"
        android:layout_marginRight="5dp" />

    <!--    counters    -->
    <TextView
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:id="@+id/counterInProgress"
        android:text="0"
        android:textColor="@color/color_white"
        android:textAlignment="center"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:visibility="visible"
        android:layout_above="@+id/view"
        android:layout_toLeftOf="@+id/imageView_wins_logo"
        android:layout_toStartOf="@+id/imageView_wins_logo"
        android:layout_marginRight="5dp" />
    <TextView
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:id="@+id/counterWins"
        android:text="0"
        android:textColor="@color/color_white"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:visibility="visible"
        android:layout_above="@+id/view"
        android:layout_toLeftOf="@+id/imageView_total_logo"
        android:layout_toStartOf="@+id/imageView_total_logo"
        android:layout_marginRight="5dp" />
    <TextView
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:id="@+id/counterTotal"
        android:text="0"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:visibility="visible"
        android:layout_above="@+id/view"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="8dp" />

    <!--    line of the end    -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#339997"
        android:id="@+id/view"
        android:visibility="visible"
        android:layout_below="@+id/picture"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp" />

</RelativeLayout>
