<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/card_view_non_edit"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="8dp">

    <!--   Recycler View Item Row   -->
    <RelativeLayout
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:layout_height="fill_parent"
        android:paddingTop="20dp"
        android:paddingBottom="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/goal_text"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textAllCaps="false"
            android:visibility="visible"
            android:paddingTop="10dp"
            android:gravity="center_vertical|center_horizontal"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:typeface="normal"
            android:textColor="#339997"
            android:layout_above="@+id/tvEverydayForTheNext" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/et_goal"
            android:maxLength="35"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:inputType="textCapSentences"
            android:textAllCaps="false"
            android:visibility="invisible"
            android:hint="Enter your challenge"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:gravity="center_vertical|center_horizontal"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textColor="#339997"
            android:capitalize="characters" />

        <EditText
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/et_days"
            android:maxLength="3"
            android:visibility="invisible"
            android:hint="21"
            android:gravity="center_vertical|center_horizontal"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textColor="#339997"
            android:layout_below="@+id/tvEverydayForTheNext"
            android:layout_alignLeft="@+id/imageViewAcceptButton"
            android:layout_alignStart="@+id/imageViewAcceptButton"
            android:layout_alignRight="@+id/imageViewAcceptButton"
            android:layout_alignEnd="@+id/imageViewAcceptButton" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/days_text"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textColor="#339997"
            android:visibility="visible"
            android:paddingLeft="0dp"
            android:layout_alignBottom="@+id/et_days"
            android:layout_alignTop="@+id/et_days"
            android:editable="false"
            android:gravity="center"
            android:layout_alignRight="@+id/imageViewAcceptButton"
            android:layout_alignEnd="@+id/imageViewAcceptButton"
            android:layout_alignLeft="@+id/et_days"
            android:layout_alignStart="@+id/et_days" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Days"
            android:id="@+id/tvDays"
            android:textColor="#339997"
            android:layout_alignBottom="@+id/et_days"
            android:layout_alignRight="@+id/tvEverydayForTheNext"
            android:layout_alignEnd="@+id/tvEverydayForTheNext"
            android:layout_alignTop="@+id/et_days"
            android:gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="everyday for the next"
            android:id="@+id/tvEverydayForTheNext"
            android:layout_below="@+id/et_goal"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/imageViewAcceptButton"
            android:visibility="visible"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/points"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Level 1 Challenge"
            android:id="@+id/tvLevel1Chall"
            android:layout_alignBottom="@+id/imageViewAcceptButton"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/imageViewAcceptButton"
            android:layout_toStartOf="@+id/imageViewAcceptButton"
            android:layout_alignTop="@+id/imageViewAcceptButton"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="#339997" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:text="Reward +10 points"
            android:id="@+id/tvRewardPlus10Points"
            android:layout_alignTop="@+id/imageViewAcceptButton"
            android:layout_toRightOf="@+id/imageViewAcceptButton"
            android:layout_alignBottom="@+id/imageViewAcceptButton"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="#339997" />

    </RelativeLayout>

</android.support.v7.widget.CardView>