<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SelfImprovementActivity"
    tools:showIn="@layout/app_bar_wake_up"
    android:background="@drawable/selfimprovementback"
    android:id="@+id/wake_up">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageViewLogo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/wakeup_white"
        android:layout_marginTop="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/i_challenge_myself_to"
        android:id="@+id/tvChallengeToMySelf"
        android:textColor="#ffffff"
        android:gravity="center_vertical|center_horizontal"
        android:layout_below="@+id/imageWakeUpChall"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="24dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageWakeUpChall"
        android:layout_below="@+id/imageViewLogo"
        android:layout_centerHorizontal="true"
        android:src="@drawable/wakeuptext"
        android:layout_marginTop="16dp" />

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvChallengeToMySelf"
        android:layout_above="@+id/imageButtonAccept"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="8dp">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:orientation="vertical"
            android:layout_height="fill_parent"
            android:paddingTop="20dp"
            android:paddingBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/goal_text"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:gravity="center_vertical|center_horizontal"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:typeface="normal"
                android:textColor="#339997"
                android:text="@string/wake_up_at"
                android:layout_alignParentTop="true" />

            <ImageView
                android:layout_width="60sp"
                android:layout_height="60sp"
                android:id="@+id/imageViewPoints"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/points"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:text="@string/level_1_challenge"
                android:id="@+id/tvLevel1Chall"
                android:layout_alignBottom="@+id/imageViewPoints"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@+id/imageViewPoints"
                android:layout_toStartOf="@+id/imageViewPoints"
                android:layout_alignTop="@+id/imageViewPoints"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="#339997" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:text="@string/reward_10_points"
                android:id="@+id/tvRewardPlus10Points"
                android:layout_alignTop="@+id/imageViewPoints"
                android:layout_toRightOf="@+id/imageViewPoints"
                android:layout_alignBottom="@+id/imageViewPoints"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="#339997" />

            <TimePicker
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/timePicker"
                android:timePickerMode="spinner"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/goal_text"
                android:layout_above="@+id/tvEveryDayWakeUp"
                tools:targetApi="lollipop" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/everyday_for_next"
                android:id="@+id/tvEveryDayWakeUp"
                android:layout_above="@+id/tvDays"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/_21_days"
                android:id="@+id/tvDays"
                android:textSize="20sp"
                android:layout_above="@+id/imageViewPoints"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:textColor="#339997" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/imageButtonAccept"
        android:background="@drawable/accept"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp" />

</RelativeLayout>
