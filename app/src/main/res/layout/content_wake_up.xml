<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SelfImprovementActivity"
    tools:showIn="@layout/app_bar_wake_up"
    android:id="@+id/wake_up">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView13"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/ic_launcher"
        android:layout_marginTop="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="I challenge myself to"
        android:id="@+id/textView20"
        android:textColor="#ffffff"
        android:gravity="center_vertical|center_horizontal"
        android:layout_below="@+id/imageView12"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="24dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView12"
        android:layout_below="@+id/imageView13"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/ic_launcher"
        android:layout_marginTop="16dp" />

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView20"
        android:layout_above="@+id/imageButtonAcceptSelfImprovement"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="8dp">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:orientation="vertical"
            android:layout_height="fill_parent"
            android:paddingTop="20dp"
            android:paddingBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/goal_text"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:gravity="center_vertical|center_horizontal"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:typeface="normal"
                android:textColor="#339997"
                android:text="WAKE UP AT"
                android:layout_alignParentTop="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageViewAcceptButton"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/ic_launcher"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Level 1 Challenge"
                android:id="@+id/tvLevel1Chall"
                android:layout_alignBottom="@+id/imageViewAcceptButton"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@+id/imageViewAcceptButton"
                android:layout_toStartOf="@+id/imageViewAcceptButton"
                android:layout_alignTop="@+id/imageViewAcceptButton"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="#339997" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:text="Reward +10 points"
                android:id="@+id/tvRewardPlus10Points"
                android:layout_alignTop="@+id/imageViewAcceptButton"
                android:layout_toRightOf="@+id/imageViewAcceptButton"
                android:layout_alignBottom="@+id/imageViewAcceptButton"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="#339997" />

            <TimePicker
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/timePicker"
                android:timePickerMode="spinner"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/goal_text"
                android:layout_above="@+id/textView22" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="everyday for next"
                android:id="@+id/textView22"
                android:layout_above="@+id/textView23"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="21 DAYS"
                android:id="@+id/textView23"
                android:layout_above="@+id/imageViewAcceptButton"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:textColor="#339997" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/imageButtonAcceptSelfImprovement"
        android:background="@drawable/accept"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp" />

</RelativeLayout>
