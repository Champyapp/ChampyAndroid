<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/champy_background"
    android:id="@+id/change_photo" >


    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="4dp"
        android:id="@+id/photo"
        android:layout_above="@+id/view2" />

    <include layout="@layout/app_bar_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/app_bar_photo" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#339997"
        android:id="@+id/view2"
        android:visibility="visible"
        android:layout_above="@+id/tv_take_a_picture" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/take_photo_from_camera"
        android:id="@+id/tv_take_a_picture"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/tv_choose_from_gallery"
        android:layout_alignStart="@+id/tv_choose_from_gallery"
        android:layout_marginBottom="16dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#ffffff"
        android:gravity="center_horizontal"
        android:clickable="true"
        android:layout_marginTop="16dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#339997"
        android:id="@+id/view1"
        android:visibility="visible"
        android:layout_above="@+id/tv_choose_from_gallery"
        android:layout_alignLeft="@+id/tv_choose_from_gallery"
        android:layout_alignStart="@+id/tv_choose_from_gallery" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/take_photo_from_gallery"
        android:id="@+id/tv_choose_from_gallery"
        android:layout_below="@+id/tv_take_a_picture"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="center_horizontal"
        android:textColor="#ffffff"
        android:clickable="true"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#339997"
        android:id="@+id/view"
        android:visibility="visible"
        android:layout_below="@+id/tv_choose_from_gallery"
        android:layout_alignLeft="@+id/tv_choose_from_gallery"
        android:layout_alignStart="@+id/tv_choose_from_gallery" />


</RelativeLayout>
