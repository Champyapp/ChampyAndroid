<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/gradient_champy"
    android:id="@+id/change_photo" >


    <ImageView
        android:id="@+id/photo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="15dp"
        android:layout_alignParentTop="true" />

    <include layout="@layout/app_bar_photo" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorTextAqua"
        android:id="@+id/view2"
        android:visibility="visible"
        android:layout_below="@id/photo" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_take_a_picture"
        android:text="@string/take_photo_from_camera"
        android:textColor="@android:color/white"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:gravity="center_horizontal"
        android:clickable="true"
        android:layout_below="@id/view2"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/view1"
        android:background="@color/colorTextAqua"
        android:layout_above="@+id/tv_choose_from_gallery"
        android:layout_alignLeft="@+id/tv_choose_from_gallery"
        android:layout_alignStart="@+id/tv_choose_from_gallery" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_choose_from_gallery"
        android:text="@string/take_photo_from_gallery"
        android:textColor="@android:color/white"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:clickable="true"
        android:gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_below="@+id/tv_take_a_picture"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/view"
        android:background="@color/colorTextAqua"
        android:layout_below="@+id/tv_choose_from_gallery"
        android:layout_alignLeft="@+id/tv_choose_from_gallery"
        android:layout_alignStart="@+id/tv_choose_from_gallery" />


</RelativeLayout>
