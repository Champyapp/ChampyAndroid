<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_create_challenge"
    android:background="@color/color_white">


    <ImageView
        android:id="@+id/image_view_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:src="@drawable/ic_ab_back_holo_light_am" />

    <TextView
        android:id="@+id/tv_challenge_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Challenge"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:textColor="@color/black"
        android:gravity="center"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_alignBottom="@+id/image_view_back"
        android:layout_alignTop="@+id/image_view_back"
        android:layout_toRightOf="@+id/image_view_back"
        android:layout_toEndOf="@+id/image_view_back"
        android:layout_toLeftOf="@+id/text_view_cancel"
        android:layout_toStartOf="@+id/text_view_cancel" />

    <TextView
        android:id="@+id/text_view_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:textAlignment="center"
        android:textColor="@color/blue"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/tv_challenge_name" />


    <!-- Challenge icon -->
    <ImageView
        android:id="@+id/image_view_challenge_icon"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:paddingTop="32dp"
        android:paddingBottom="32dp"
        android:src="@drawable/ic_sleep_before_midnight"
        android:layout_below="@+id/tv_challenge_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/text_view_challenge_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_view_challenge_icon"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="Sleep Before Midnight"
        android:textSize="36sp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

    <TextView
        android:id="@+id/text_view_challenge_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_challenge_name"
        android:layout_above="@+id/line1"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="Get to bed before midnight to have full 7 to 8 hours of sleep."
        android:textSize="18sp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:background="#d4d4d4"
        android:layout_above="@+id/text_view_challenge_rules" />

    <TextView
        android:id="@+id/text_view_challenge_rules"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Challenge Rules"
        android:textColor="@color/black"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:paddingBottom="2dp"
        android:paddingTop="2dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_above="@+id/line2" />

    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:background="#d4d4d4"
        android:layout_above="@+id/text_view_challenge_a_friend" />

    <TextView
        android:id="@+id/text_view_challenge_a_friend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Challenge a Friend"
        android:textColor="@color/black"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:paddingBottom="2dp"
        android:paddingTop="2dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_above="@+id/line3" />

    <View
        android:id="@+id/line3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:background="#d4d4d4"
        android:layout_above="@+id/switch_reminder" />

    <Switch
        android:id="@+id/switch_reminder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Daily Reminder"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:textColor="@color/black"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:checked="true"
        android:layout_above="@+id/line4" />

    <View
        android:id="@+id/line4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d4d4d4"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:layout_above="@+id/text_view_create_challenge" />

    <TextView
        android:id="@+id/text_view_create_challenge"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="Create Challenge"
        android:textAlignment="center"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:textColor="@color/blue"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <include layout="@layout/item_challenge_created" />


</RelativeLayout>