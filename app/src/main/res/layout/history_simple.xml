<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="false"
    android:id="@+id/history_simple"
    android:visibility="visible"
    android:background="@drawable/champy_background"
    android:layout_above="@+id/row_friends_list_open"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true">


    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/picture"
        android:layout_alignParentBottom="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/challengetypeicon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textSize="16sp"
        android:id="@+id/challengeNameInHistory"
        android:textColor="#ffffff"
        android:layout_toRightOf="@+id/picture"
        android:layout_alignTop="@+id/picture"
        android:layout_marginLeft="8dp" />

    <!--<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/level_0_champy"
        android:id="@+id/level"
        android:visibility="invisible"
        android:textColor="#ffffff"
        android:layout_above="@+id/view"
        android:layout_alignLeft="@+id/challengeNameInHistory"
        android:layout_alignStart="@+id/challengeNameInHistory" />-->

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView_wins_logo"
        android:src="@drawable/challenges"
        android:layout_above="@+id/view"
        android:layout_toLeftOf="@+id/counterWins"
        android:layout_toStartOf="@+id/counterWins"
        android:layout_marginRight="8dp"
        android:contentDescription="@string/challengestatus" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView_total_logo"
        android:src="@drawable/challenge"
        android:layout_above="@+id/view"
        android:layout_toLeftOf="@+id/counterInProgress"
        android:layout_toStartOf="@+id/counterInProgress"
        android:layout_marginRight="8dp"
        android:contentDescription="@string/points" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/count_of_points_10"
        android:id="@+id/counterInProgress"
        android:textColor="#ffffff"
        android:layout_alignBottom="@+id/imageView_total_logo"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:id="@+id/counterWins"
        android:textColor="#ffffff"
        android:layout_alignBottom="@+id/imageView_total_logo"
        android:layout_toLeftOf="@+id/imageView_total_logo"
        android:layout_toStartOf="@+id/imageView_total_logo"
        android:layout_marginRight="8dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#339997"
        android:id="@+id/view"
        android:visibility="visible"
        android:layout_below="@+id/picture"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp" />

</RelativeLayout>
