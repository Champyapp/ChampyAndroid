<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:windowEnableSplitTouch="false"
    android:splitMotionEvents="false"
    android:id="@+id/content_main">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/image_view_circle_logo"
        android:background="@drawable/round_corner"
        android:layout_above="@+id/tv_noting_here_yet"
        android:layout_centerInParent="true"
        android:layout_marginBottom="50dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_noting_here_yet"
        android:text="@string/nothing_here_yet"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_centerInParent="true" />

    <ListView
        android:id="@+id/card_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:listSelector="@android:color/transparent"
        android:cacheColorHint="@android:color/transparent"
        android:divider="@null"
        android:dividerHeight="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <android.support.design.widget.FloatingActionButton
        app:backgroundTint="@color/color_text_aqua"
        android:id="@+id/fabSelf"
        android:src="@drawable/fab_self"
        android:scaleType="center"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/fabDuel"
        android:layout_alignLeft="@+id/fabDuel"
        android:layout_alignStart="@+id/fabDuel"
        android:layout_alignRight="@+id/fabDuel"
        android:layout_alignEnd="@+id/fabDuel" />

    <android.support.design.widget.FloatingActionButton
        app:backgroundTint="@color/color_text_aqua"
        android:background="@drawable/ic_duel_yellow"
        android:id="@+id/fabDuel"
        android:src="@drawable/fab_duel"
        android:scaleType="center"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/fabWake"
        android:layout_alignLeft="@+id/fabWake"
        android:layout_alignStart="@+id/fabWake"
        android:layout_alignRight="@+id/fabWake"
        android:layout_alignEnd="@+id/fabWake" />

    <android.support.design.widget.FloatingActionButton
        app:backgroundTint="@color/color_text_aqua"
        android:id="@+id/fabWake"
        android:src="@drawable/fab_wake"
        android:visibility="invisible"
        android:scaleType="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/fabPlus"
        android:layout_alignLeft="@+id/fabPlus"
        android:layout_alignStart="@+id/fabPlus"
        android:layout_alignRight="@+id/fabPlus"
        android:layout_alignEnd="@+id/fabPlus" />

    <android.support.design.widget.FloatingActionButton
        app:backgroundTint="@color/color_text_aqua"
        android:src="@drawable/fab_plus"
        android:id="@+id/fabPlus"
        android:scaleType="center"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin" />



</RelativeLayout>
