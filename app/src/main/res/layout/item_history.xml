<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="false"
    android:id="@+id/history_simple"
    android:visibility="visible"
    android:layout_above="@+id/row_friends_list_open"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true">


    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/picture"
        android:layout_alignParentBottom="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textSize="16sp"
        android:id="@+id/challengeNameInHistory"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/picture"
        android:layout_toRightOf="@+id/picture"
        android:layout_marginLeft="8dp"
        />


    <TextView
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:id="@+id/counterInProgress"
        android:textSize="12sp"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:paddingRight="5dp"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/imageView_total_logo"
        android:layout_alignBottom="@+id/imageView_total_logo"
        android:layout_above="@+id/view" />

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:id="@+id/imageView_total_logo"
        android:src="@drawable/ic_score_total"
        android:layout_above="@+id/view"
        android:layout_toLeftOf="@+id/counterInProgress"
        android:layout_toStartOf="@+id/counterInProgress"
        android:contentDescription="@string/_21_days" />


    <TextView
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:id="@+id/counterWins"
        android:textSize="12sp"
        android:textColor="#ffffff"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:gravity="center_vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/imageView_total_logo"
        android:layout_toStartOf="@+id/imageView_total_logo"
        android:layout_alignTop="@+id/imageView_total_logo"
        android:layout_alignBottom="@+id/imageView_total_logo"
        android:layout_above="@+id/view" />

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:id="@+id/imageView_wins_logo"
        android:src="@drawable/ic_score_prog"
        android:layout_above="@+id/view"
        android:layout_toStartOf="@+id/counterWins"
        android:layout_toLeftOf="@+id/counterWins" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_text_aqua"
        android:id="@+id/view"
        android:visibility="visible"
        android:layout_below="@+id/picture"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp" />

</RelativeLayout>
