<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:windowEnableSplitTouch="false"
    android:splitMotionEvents="false"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activity.MainActivity"
    tools:showIn="@layout/app_bar_main"
    android:background="@drawable/champy_background"
    android:id="@+id/content_main"  >

    <!-- background for user photo -->
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/main_background"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true" />

    <!-- text "welcome username" -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/welcomeUserName"
        android:textAllCaps="true"
        android:textSize="20sp"
        android:text="Welcome Sasha Khyzhun"
        android:textColor="@android:color/white"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp" />

    <!-- circles -->
    <ImageView
        android:id="@+id/imageView_challenges_animation"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/start_circle_00026"
        android:layout_marginLeft="16dp"
        android:layout_below="@+id/welcomeUserName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp" />

    <ImageView
        android:id="@+id/imageView_wins_animation"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/start_circle_00026"
        android:layout_below="@+id/welcomeUserName"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/imageView_total_animation"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/start_circle_00026"
        android:layout_below="@+id/welcomeUserName"
        android:layout_alignRight="@+id/fabPlus"
        android:layout_alignEnd="@+id/fabPlus" />

    <!-- android:background="@drawable/score_animation" for anim-->
    <!-- Counters -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textViewChallengesCounter"
        android:textIsSelectable="true"
        android:textSize="30sp"
        android:text="@string/zero"
        android:layout_centerInParent="@+id/imageView_challenges_animation"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="#ffffff"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/imageView_challenges_animation"
        android:layout_alignEnd="@+id/imageView_challenges_animation"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_below="@+id/welcomeUserName"
        android:layout_alignBottom="@+id/imageView_challenges_logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textViewWinsCounter"
        android:layout_alignLeft="@+id/imageView_wins_animation"
        android:layout_alignStart="@+id/imageView_wins_animation"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="30sp"
        android:text="1"
        android:textColor="#ffffff"
        android:layout_alignRight="@+id/imageView_wins_animation"
        android:layout_alignEnd="@+id/imageView_wins_animation"
        android:layout_below="@+id/welcomeUserName"
        android:layout_alignBottom="@+id/imageView_wins_logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textViewTotalCounter"
        android:layout_alignLeft="@+id/imageView_total_animation"
        android:layout_alignStart="@+id/imageView_total_animation"
        android:textSize="30sp"
        android:text="@string/zero"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="#ffffff"
        android:layout_alignRight="@+id/imageView_total_animation"
        android:layout_alignEnd="@+id/imageView_total_animation"
        android:layout_below="@+id/welcomeUserName"
        android:layout_alignBottom="@+id/imageView_total_logo" />

     <!-- icons inside circles -->
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/imageView_challenges_logo"
        android:src="@drawable/challenges"
        android:layout_alignBottom="@+id/imageView_challenges_animation"
        android:layout_marginBottom="10dp"
        android:layout_alignRight="@+id/imageView_challenges_animation"
        android:layout_alignEnd="@+id/imageView_challenges_animation"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="@dimen/activity_vertical_margin"/>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/imageView_wins_logo"
        android:src="@drawable/wins"
        android:layout_alignLeft="@+id/imageView_wins_animation"
        android:layout_alignStart="@+id/imageView_wins_animation"
        android:layout_alignTop="@+id/imageView_challenges_logo"
        android:layout_alignRight="@+id/imageView_wins_animation"
        android:layout_alignEnd="@+id/imageView_wins_animation" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/imageView_total_logo"
        android:src="@drawable/total"
        android:layout_alignRight="@+id/imageView_total_animation"
        android:layout_alignEnd="@+id/imageView_total_animation"
        android:layout_alignTop="@+id/imageView_wins_logo"
        android:layout_alignLeft="@+id/imageView_total_animation"
        android:layout_alignStart="@+id/imageView_total_animation" />

    <!-- text in progress / wins / total -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewChallenges"
        android:text="@string/in_progress"
        android:textSize="15sp"
        android:textColor="#ffffff"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/imageView_challenges_animation"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/imageView_challenges_animation"
        android:layout_alignEnd="@+id/imageView_challenges_animation"
        android:gravity="center_vertical|center_horizontal"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:paddingBottom="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewWins"
        android:text="@string/wins"
        android:textSize="15sp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/imageView_wins_animation"
        android:layout_alignLeft="@+id/imageView_wins_animation"
        android:layout_alignStart="@+id/imageView_wins_animation"
        android:layout_alignRight="@+id/imageView_wins_animation"
        android:layout_alignEnd="@+id/imageView_wins_animation"
        android:gravity="center_vertical|center_horizontal"
        android:paddingBottom="10dp"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewTotal"
        android:text="@string/total"
        android:textSize="15sp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/imageView_total_animation"
        android:layout_alignRight="@+id/imageView_total_animation"
        android:layout_alignEnd="@+id/imageView_total_animation"
        android:layout_alignBottom="@+id/textViewWins"
        android:layout_alignLeft="@+id/imageView_total_animation"
        android:layout_alignStart="@+id/imageView_total_animation"
        android:gravity="center_vertical|center_horizontal"
        android:paddingBottom="10dp"
        android:textColor="#ffffff" />

   <!-- <include
        layout="@layout/item_status_bar"
        android:layout_below="@+id/welcomeUserName"
        android:id="@+id/item_status_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />-->

    <!-- our cards -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/fabPlus"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:paddingTop="10dp"
        android:id="@+id/cards"
        android:layout_below="@+id/textViewWins"
        android:focusable="false">
    </RelativeLayout>

    <!-- blurred screen -->

    <!-- fab -->
    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/fabPlus"
        android:background="@drawable/centerwithplus"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"/>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/blurScreen"
        android:visibility="invisible"
        android:clickable="true"
        android:layout_below="@+id/textViewChallenges"
        android:layout_alignRight="@+id/textViewWins"
        android:layout_alignEnd="@+id/textViewWins"
        android:layout_marginRight="28dp"
        android:layout_marginEnd="28dp"
        android:layout_marginTop="40dp" />


</RelativeLayout>
