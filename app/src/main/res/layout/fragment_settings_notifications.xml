<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:padding="16dp"
        android:id="@+id/layout_morning_remind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_eight_hours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="08:00"
            android:textSize="44sp" />

        <TextView
            android:id="@+id/text_view_am"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AM"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_alignBaseline="@+id/tv_eight_hours"
            android:layout_alignBottom="@+id/tv_eight_hours"
            android:layout_toRightOf="@+id/tv_eight_hours"
            android:layout_toEndOf="@+id/tv_eight_hours" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Morning Reminder"
            android:layout_below="@+id/tv_eight_hours"
            android:layout_alignRight="@+id/text_view_am"
            android:layout_alignEnd="@+id/text_view_am"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Switch
            android:id="@+id/switch_morning_reminder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <include layout="@layout/item_line" />

    <RelativeLayout
        android:padding="16dp"
        android:id="@+id/layout_evening_remind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_nine_hours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="09:00"
            android:textSize="44sp" />

        <TextView
            android:id="@+id/text_view_pm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PM"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_alignBaseline="@+id/tv_nine_hours"
            android:layout_alignBottom="@+id/tv_nine_hours"
            android:layout_toRightOf="@+id/tv_nine_hours"
            android:layout_toEndOf="@+id/tv_nine_hours" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Evening Reminder"
            android:layout_below="@+id/tv_nine_hours"
            android:layout_alignRight="@+id/text_view_pm"
            android:layout_alignEnd="@+id/text_view_pm"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Switch
            android:id="@+id/switch_evening_reminder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>


</LinearLayout>