<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/layout_challenge_created"
    android:visibility="visible"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000"
        android:alpha="0.8" />

    <ImageView
        android:id="@+id/image_view_challenge_icon"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleX="0.6"
        android:scaleY="0.6"
        android:src="@drawable/ic_sleep_before_midnight" />

    <TextView
        android:id="@+id/text_view_nice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nice!"
        android:textSize="36sp"
        android:textColor="@color/color_white"
        android:textAlignment="center"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_below="@+id/image_view_challenge_icon" />

    <TextView
        android:id="@+id/text_view_create_challenge_large_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/challenge_created_large_text"
        android:textSize="20sp"
        android:textColor="@color/color_white"
        android:textAlignment="center"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:layout_below="@+id/text_view_nice"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/text_view_got_it"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:text="Got it"
        android:textSize="22sp"
        android:textColor="@color/color_white"
        android:textAlignment="center"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:gravity="center"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_marginBottom="36dp"
        android:layout_above="@+id/text_view_share"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/text_view_share"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:text="Share"
        android:textSize="22sp"
        android:textColor="@color/color_white"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>