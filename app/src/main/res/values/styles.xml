<resources>

    <!-- Base application theme. -->
    <style name="ChampyMainTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary_green</item>
        <item name="colorPrimaryDark">@color/primary_dark_green</item>
        <item name="colorAccent">@color/accent_orange</item>
        <item name="colorControlNormal">@color/primary_text_black</item>
        <item name="colorControlActivated">@color/color_white</item> <!-- progress bg -->
        <item name="colorControlHighlight">#339997</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="ChampySecondaryTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary_indigo</item>
        <item name="colorPrimaryDark">@color/primary_dark_indigo</item>
        <item name="colorAccent">@color/accent_indigo</item>
        <item name="colorControlNormal">@color/primary_text_indigo</item>
        <item name="colorControlActivated">@color/primary_indigo</item> <!-- progress bg -->
        <item name="colorControlHighlight">#339997</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="elevation">0dp</item>
    </style>


    <style name="ChampyMainTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/color_hint</item>
        <item name="android:textSize">20sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/black</item> <!-- color of input text -->
        <item name="colorControlNormal">@color/black
        </item> <!-- color of bottom line in default case -->
        <item name="colorControlActivated">@color/gray
        </item> <!-- color of text and line in active case -->
        <item name="android:textColorHighlight">@color/gray</item> <!-- color of selected text  -->
        <item name="android:textColorLink">#ffd500</item> <!-- ??? -->
    </style>

    <!-- For toolbar -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


